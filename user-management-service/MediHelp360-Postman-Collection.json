	"event": [
		{
			"listen": "test",
			"script": {
				"exec": [
					"// Script para extraer automáticamente el token de acceso del login",
					"if (pm.response.code === 200) {",
					"    const response = pm.response.json();",
					"    if (response.accessToken) {",
					"        pm.environment.set('access_token', response.accessToken);",
					"        console.log('Access token guardado:', response.accessToken);",
					"    }",
					"    if (response.refreshToken) {",
					"        pm.environment.set('refresh_token', response.refreshToken);",
					"        console.log('Refresh token guardado:', response.refreshToken);",
					"    }",
					"    if (response.user && response.user.id) {",
					"        pm.environment.set('user_id', response.user.id);",
					"        console.log('User ID guardado:', response.user.id);",
					"    }",
					"}"
				],
				"type": "text/javascript"
			}
		}
